<%- include("./partials/header") %>
<%- include("./partials/navbar") %>
<%- include("./partials/billboard") %>

<div class="container">

  <img class="billboard-img" src="/images/matetsi5.jpg" />
  <img src="/images/img5.png" class="home-img d-none d-sm-block">

  <div class="row">
    <% blogs.reverse() %>

    <% blogs.forEach(blog =>{ %>
      <div class="col-md-4">
        <div class="card mt-5">
              <img class="mb-3 img-fluid blog-img" src="/uploads/<%= blog.image %>" >
              <p class=" posted"><%= blog.postedAt %> </p>
              <h5 class="card-title"> <%= blog.title %> </h5>
            
              <% let longContent = blog.content %>
              <% let shortContent = longContent.slice(0 , 60)%>

              <p class="card-text"><%= shortContent %> </p>
              <div class="btn-body ">
                 <a href="/blog/<%= blog._id %>" class="btn ">See Recipe</a>
              </div>
        </div>
      </div>
    <% })%>
  </div>
</div>

<%- include("./partials/footer") %>


